{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./lib",
    "paths": {
      "*": ["*", "src/@types/*"]
    },
    "skipLibCheck": true,
    "target": "ES2015"
  },
  "exclude": ["lib", "node_modules"]
}
